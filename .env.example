# EVA-VOICE Environment Variables

# Required: Groq API Key
GROQ_API_KEY=gsk_your_groq_api_key_here

# API Authentication (set EVA_DEV_MODE=false in production)
EVA_API_KEY=eva-prod-key-change-this
EVA_DEV_MODE=true

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Database (optional, defaults to local file)
DB_PATH=eva_conversations.db

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
